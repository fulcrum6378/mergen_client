<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="match">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="alertDialogue1" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/ADBG</item>
        <item name="android:textColor">@color/CS</item>
    </style>


    <!-- Panel -->
    <style name="fakeRadius">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/fake_radius_1</item>
    </style>

    <style name="bnvButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/button_1</item>
        <item name="layout_constraintWidth_percent">0.5</item>
    </style>

    <style name="bnvButtonIV" parent="match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintHeight_percent">0.47</item>
    </style>

    <style name="address">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/CS</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="addressET" parent="address">
        <item name="android:layout_weight">10</item>
        <item name="android:inputType">number</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:maxLength">3</item>
        <item name="android:textColorHint">@color/CSV</item>
        <item name="android:background">@color/TP</item>
    </style>

    <style name="addressPoint" parent="address">
        <item name="android:layout_weight">3</item>
        <item name="android:text">.</item>
    </style>
</resources>